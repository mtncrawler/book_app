<!DOCTYPE html>
<html>
<%- include('../../partials/head'); %>
<body>
  <h1>Search Results</h1>
  <%- include('../../partials/header'); %>

  <% books.forEach( book => {  %>
    <div>
        <form action="/books/<%= book.id %>" method="POST">
            <input hidden name = "title" value="<%= book.title %>"/>
            <input hidden name = "author" value="<%= book.author %>"/>
            <input hidden name = "isbn" value="<%= book.isbn %>"/>
            <input hidden name = "image_url" value="<%= book.image_url %>"/>
            <input hidden name = "description" value="<%= book.description %>"/>
            <img src = "<%= book.image_url %>"/>
            <h3><%= book.title %></h3>
            <h4><%= book.author %></h4>
            <p><%= book.description %></p>
            <input type="submit" value="Add to Database"/>
        </form>
    </div>
    <% }) %>
</body>
</html>